<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TelaEditor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTituloNota"
        android:inputType="textCapSentences|textCapWords"
        android:hint="Titulo"
        android:padding="10dp"
        android:layout_below="@+id/toolbarBn2"/>

    <EditText
        android:id="@+id/txtNota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtTituloNota"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginHorizontal="2dp"
        android:gravity="top|left"
        android:hint="Digite sua anotação aqui"
        android:inputType="textUri|textLongMessage|textMultiLine|textCapWords|textCapSentences"
        android:textAlignment="viewStart" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="29dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_done_24dp" />

</RelativeLayout>